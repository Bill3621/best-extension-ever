{
    "name": "Best Extension Ever",
    "description": "This extension is the best extension ever in the history of extensions.",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": ["storage"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "images/icon.png"
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["content.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["images/collection/*.png"],
            "matches": ["http://*/*", "https://*/*"]
        }
    ]
}
